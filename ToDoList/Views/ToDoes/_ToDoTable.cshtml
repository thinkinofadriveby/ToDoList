@model IEnumerable<ToDoList.Models.ToDo>

<div id="progressBarToDo">
    <div class="progress">
        <div class="progress-bar" role="progressbar" style="width:@Html.AttributeEncode((ViewBag.Percent))%">@(ViewBag.Percent)%</div>
    </div>
</div>

<table class="table">
    @foreach (var item in Model)
    {
        <tr class="task-wrapper">
            <td class="task-name">
                @if (!item.IsDone)
                {
                    @Html.DisplayFor(modelItem => item.Description)
                }
                else
                {
                    <div class="CompletedToDo">
                        @Html.DisplayFor(modelItem => item.Description)
                    </div>
                }
            </td>
            <td class="checkbox-wrapper">
                @Html.CheckBoxFor(modelItem => item.IsDone, new { id = item.Id, @class = "ActiveCheck" })
            </td>
            <td class="interaction">
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-outline-dark btn-sm small-btn" })
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-outline-dark btn-sm small-btn" })
            </td>
        </tr>
    }
</table>




<script src="~/Custom_Scripts/AddCheckBoxListener.js"></script>